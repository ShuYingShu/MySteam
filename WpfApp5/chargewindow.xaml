<Window x:Class="WpfApp5.chargewindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5"
        mc:Ignorable="d"
        Title="chargewindow" Height="249.557" Width="377.787">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label  Content="输入充值金额(¥):" Grid.Row="0" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:Name="TextBox" InputMethod.IsInputMethodEnabled="False" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="169,0,0,0" Width="178" Height="34" FontSize="20" PreviewKeyDown="TextBox1_PreviewKeyDown"/>
        <Button Grid.Row="1" Content="确认" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="42,0,0,0" Height="35" Width="122" FontWeight="Bold" FontSize="16" Click="confirm_click" />
        <Button Grid.Row="1" Content="取消" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="204,0,0,0" Height="35" Width="125" FontWeight="Bold" FontSize="16" Click="cancle_click" />
    </Grid>
</Window>
